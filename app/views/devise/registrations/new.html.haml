%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html=> {:class => "form-horizontal"}) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email, "E-mail:", :class=> "control-label"
    .controls
      = f.email_field :email, :class => "input-medium"
  .control-group
    = f.label :first_name, "First Name:", :class=> "control-label"
    .controls
      = f.text_field :first_name, :class => "input-medium"
  .control-group
    = f.label :last_name, "Last Name:", :class=> "control-label"
    .controls
      = f.text_field :last_name, :class => "input-medium"
  .control-group
    = f.label :password, "Password:", :class=> "control-label"
    .controls
      = f.password_field :password, :class => "input-medium"
  .control-group
    = f.label :password_confirmation, "Confirm Password:", :class=> "control-label"
    .controls
      = f.password_field :password_confirmation, :class => "input-medium"        
  .form-actions
    =f.submit "Sign up",:class => "btn btn-success btn-large"
= render "devise/shared/links"
