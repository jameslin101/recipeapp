- model_class = Recipe
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= link_to recipe.id, recipe_path(recipe)
        %td= recipe.name
        %td= recipe.description
        %td
          =link_to "Edit", edit_recipe_path(recipe), :class => 'btn btn-mini btn-info'     
          =link_to "Delete", recipe_path(recipe),
                             :method => :delete,
                             :confirm => t('.confirm',
                             :default => t("helpers.links.confirm", :default => 'Are you sure?')), 
                             :class => 'btn btn-mini btn-danger'
= link_to "Create New Recipe", new_recipe_path, :class => 'btn btn-primary'
